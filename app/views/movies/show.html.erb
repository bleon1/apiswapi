<!DOCTYPE html>
<html lang="en" dir="ltr">
  <body>
    <head>
      <div class="container">
        <div class="row">
          <h1><strong><%= @data['title'] %></strong></h1>
        </div>
        <div class="row">
          <p>Directed by: <strong><%= @data['director'] %></strong></p>
        </div><div class="row">
          <p>Produced by: <strong><%= @data['producer'] %></strong></p>
        </div>
        <div class="row">
          <p>Introduction: <%= @data['opening_crawl'] %></p>
        </div>
      </div>
    </head>
    <main>
      <div class="container">
        <div class="row">
          <div class="column">
            <% @id = 1%>
            Characters<br>
            <% @personajes.each do |p| %>
              <%= link_to p[1], personaje_path(id: @id, json: p[0]) %><br>
              <% @id += 1%>
            <% end %>
          </div>
          <div class="column">
            <% @id = 1 %>
            Planets<br>
            <% @planetas.each do |p| %>
              <%= link_to p[1], planeta_path(id: @id, json: p[0]) %><br>
              <% @id += 1%>
            <% end %> 
          </div>
          <div class="column">
            <% @id = 1 %>
            Starships<br>
            <% @naves.each do |n| %>
              <%= link_to n[1], spaceship_path(id: @id, json: n[0]) %><br>
              <% @id += 1%>
            <% end %> 
          </div>
        </div><br><br><br>
        <div class="row">
          <%= button_to "Home", root_path(), method: :get %>
        </div>
      </div>
    </main>
  </body>
</html>
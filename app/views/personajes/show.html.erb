<!DOCTYPE html>
<html lang="en" dir="ltr">
  <body>
    <head>
      <div class="container">
        <div class="row">
          <h1><strong><%= @data['name'] %></strong></h1>
        </div>
        <div class="row">
          <p><strong>Birth year:</strong> <%= @data['birth_year'] %></p>
        </div>
        <div class="row">
          <p><strong>Species:</strong> <%= @especie %></p>
        </div>
        <div class="row">
          <p><strong>Gender:</strong> <%= @data['gender'] %></p>
        </div>
        <div class="row">
          <p><strong>Height: </strong><%= @data['height'] %></p>
        </div>
        <div class="row">
          <p><strong>Mass:</strong> <%= @data['mass'] %></p>
        </div>
        <div class="row">
          <p><strong>Hair color:</strong> <%= @data['hair_color'] %></p>
        </div>
        <div class="row">
          <p><strong>Eye color:</strong> <%= @data['eye_color'] %></p>
        </div>
        <div class="row">
          <p><strong>Skin color: </strong><%= @data['skin_color'] %></p>
        </div>
      </div>
    </head>
    <main>
      <div class="container">
        <div class="row">
        </div>
        <div class="row">
          <div class="column">
            Films<br>
            <% @peliculas.each do |p| %>
              <%= link_to p[0], movie_path(id: p[1]) %><br>
            <% end %>
          </div>
          <div class="column">
            <% @id = 1 %>
            Homeworld<br>
            <%= link_to @planeta['name'], planeta_path(id: 1, json: @planeta) %><br>
          </div>
          <div class="column">
            <% @id = 1 %>
            Starships<br>
            <% @naves.each do |n| %>
              <%= link_to n[1], spaceship_path(id: @id, json: n[0]) %><br>
              <% @id += 1%>
            <% end %> 
          </div>
        </div><br><br><br>
        <div class="row">
          <%= button_to "Home", root_path(), method: :get %>
        </div>
      </div>
    </main>
  </body>
</html>
<html lang="en" dir="ltr">
  <body>
    <main>
      <div class="container">
        <div class="row">
          <div class="column">
            FILM
          </div>
          <div class="column">
            EPISODE
          </div>
          <div class="column">
            RELEASE DATE
          </div>
          <div class="column">
            DIRECTOR
          </div>
          <div class="column">
            PRODUCERS
          </div>
        </div>
          <% @response.each do |pelicula| %>
            <div class="row">
              <div class="column">
                <%= link_to pelicula['title'], movie_path(pelicula['episode_id']) %>
              </div>
              <div class="column">
                <%= pelicula['episode_id'] %>
              </div>
              <div class="column">
                <%= pelicula['release_date'].to_time.strftime('%Y') %>
              </div>
              <div class="column">
                <%= pelicula['director'] %>
              </div>
              <div class="column">
                <%= pelicula['producer'] %>
              </div>
            </div>
          <% end %>
      </div>
    </main>
  </body>
</html>